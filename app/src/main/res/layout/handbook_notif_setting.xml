<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/header_with_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="98dp"
        android:layout_height="82dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="93dp"
        android:layout_height="79dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibri_light"
        android:text="Switch"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibri_light"
        android:text="No sound"
        android:textSize="@dimen/dp_13" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibri_light"
        android:text="Sound"
        android:textSize="@dimen/dp_13" />

    <ListView
        android:id="@+id/_dynamic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibri_regular"
        android:text="Select your ringtone"
        android:textSize="@dimen/dp_17" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="349dp"
        android:layout_height="57dp"
        android:fontFamily="@font/calibri_regular"
        android:gravity="center"
        android:text="Choose notification frequency"
        android:textSize="@dimen/dp_15" />

    <RadioGroup
        android:layout_width="242dp"
        android:layout_height="88dp">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_light"
            android:text="Every 20 minutes"
            android:textSize="@dimen/dp_13" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_light"
            android:text="Every 30 minutes"
            android:textSize="@dimen/dp_13" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:backgroundTint="#F10255"
        android:fontFamily="@font/calibri_light"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_13" />

</LinearLayout>
