<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/app_transparant"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_30"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:includeFontPadding="true"
                android:padding="@dimen/dp_10"
                android:text="Handbook"
                android:textColor="@color/rdo_gender_select"
                android:textSize="60sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:fontFamily="@font/calibri_bold"
                android:gravity="left"
                android:includeFontPadding="true"
                android:text="e-mail id"
                android:textColor="#012C28"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:fontFamily="@font/calibri_regular"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:textColor="#012C28"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:fontFamily="@font/calibri_bold"
                android:gravity="left"
                android:includeFontPadding="true"
                android:text="password"
                android:textColor="#012C28"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pwd_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri_regular"
                android:gravity="left"
                android:inputType="textPassword"
                android:singleLine="false"
                android:textColor="#012C28"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/rdo_gender_select"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/createAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/water_color"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="24sp"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="continue anonymously"
            android:textSize="22sp" />

    </LinearLayout>
</RelativeLayout>
